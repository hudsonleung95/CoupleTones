<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Vibe Tone"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/vibe_list_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/vibe_tone_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:text="VibeTone 1"/>
            <RadioButton
                android:id="@+id/vibe_tone_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:text="VibeTone 2"/>
            <RadioButton
                android:id="@+id/vibe_tone_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:text="VibeTone 3"/>
            <RadioButton
                android:id="@+id/vibe_tone_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:text="VibeTone 4"/>
            <RadioButton
                android:id="@+id/vibe_tone_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:text="VibeTone 5"/>
            <RadioButton
                android:id="@+id/vibe_tone_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:text="VibeTone 6"/>
            <RadioButton
                android:id="@+id/vibe_tone_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:text="VibeTone 7"/>
            <RadioButton
                android:id="@+id/vibe_tone_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:text="VibeTone 8"/>
            <RadioButton
                android:id="@+id/vibe_tone_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:text="VibeTone 9"/>
            <RadioButton
                android:id="@+id/vibe_tone_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="VibeTone 10"/>
        </RadioGroup>
    </ScrollView>

</LinearLayout>